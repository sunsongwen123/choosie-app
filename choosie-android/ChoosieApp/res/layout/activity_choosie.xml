<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/progressBarPost"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@layout/activity_choosie"
        android:layout_margin="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_feed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:onClick="onBottomNavBarButtonClick"
            android:text="@string/buttonFeed" />

        <Button
            android:id="@+id/button_post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:onClick="onBottomNavBarButtonClick"
            android:text="@string/buttonPost" />

        <Button
            android:id="@+id/button_me"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:onClick="onBottomNavBarButtonClick"
            android:text="@string/buttonMe" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_feed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="visible" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_post"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_me"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>