<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/header_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/app_caption_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="Choozie."
            android:textColor="@color/White"
            android:textSize="32dp" />

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="-1dp"
            android:background="@drawable/header_selector"
            android:contentDescription="@string/general_content_description"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_choosie_post_margin"
            android:paddingRight="@dimen/view_choosie_post_margin"
            android:src="@drawable/refresh_button_image" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="-1dp"
            android:layout_toLeftOf="@id/refresh_button"
            android:background="@drawable/header_selector"
            android:contentDescription="@string/general_content_description"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_choosie_post_margin"
            android:paddingRight="@dimen/view_choosie_post_margin"
            android:src="@drawable/settings_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBarPost"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@layout/activity_choosie"
        android:layout_margin="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_button_feed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selected_button"
            android:clickable="true"
            android:onClick="onBottomNavBarButtonClick"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/layout_button_image_feed"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@string/general_content_description"
                android:onClick="onBottomNavBarButtonClick"
                android:src="@drawable/list_button" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_button_post"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_menu_selector"
            android:clickable="true"
            android:onClick="onBottomNavBarButtonClick"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/layout_button_image_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@string/general_content_description"
                android:onClick="onBottomNavBarButtonClick"
                android:src="@drawable/camera" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_feed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:layout_below="@+id/header_layout"
        android:visibility="visible" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_post"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:layout_below="@+id/header_layout"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_me"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:layout_below="@+id/header_layout"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>