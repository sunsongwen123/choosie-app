<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/progressBarPost"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@layout/activity_choosie"
        android:layout_margin="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_button_feed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onBottomNavBarButtonClick"
            android:background="@drawable/image_button_feed_pressed"
            android:visibility="visible" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_button_post"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onBottomNavBarButtonClick"
            android:background="@drawable/image_button_post"
            android:visibility="visible" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_feed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="visible" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_post"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_me"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>